[meta]
Name=npyrand
Description=Portable random number library
Version=0.1

[variables]
pkgname=@pkgname@
prefix=${pkgdir}
libdir=${prefix}@sep@lib
includedir=${prefix}@sep@include

[default]
Libs=-L${libdir} -lnpyrand
Cflags=-I${includedir}
Requires=mlib

[msvc]
Libs=/LIBPATH:${libdir} npyrand.lib
Cflags=/INCLUDE:${includedir}
Requires=mlib
